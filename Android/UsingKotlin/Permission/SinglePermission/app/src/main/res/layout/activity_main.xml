<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="20dp"
    />
    <android.support.constraint.Guideline
            android:id="@+id/guideline_rigth"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="20dp"
    />
    <android.support.constraint.Guideline
            android:id="@+id/guideline_top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="20dp"
    />
    <android.support.constraint.Guideline
            android:id="@+id/guideline_bottom"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="20dp"
    />

    <Button
            android:id="@+id/btn_single_permission"
            android:text="Single Permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/btn_background"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rigth"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_gropu_permission"/>
    <Button
            android:id="@+id/btn_gropu_permission"
            android:text="Group Permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/btn_background"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rigth"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_bottom"
            app:layout_constraintHorizontal_bias="0.0"/>



</android.support.constraint.ConstraintLayout>